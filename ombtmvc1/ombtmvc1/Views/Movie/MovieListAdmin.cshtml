@model IEnumerable<ombtmvc1.Models.Movie>

@{
    ViewBag.Title = "MovieListAdmin";
}

<h2>MovieListAdmin</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Movie_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movie_language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movie_location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movie_gener)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movie_time)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Atickets)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movie_Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Movie_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie_language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie_location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie_gener)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Atickets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie_Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Movie_Id }) |
                @Html.ActionLink("Details", "ViewMoviesA", new { id = item.Movie_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Movie_Id })
            </td>
        </tr>
    }

</table>
<p>
    <a href="@Url.Action("AdminDash","Admin")"
       class="btn btn-primary btn-lg">Back</a>
</p>
